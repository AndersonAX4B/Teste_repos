<odoo>
    <data>
        <record id="receber_fatura_line_form_view" model="ir.ui.view">
            <field name="name">Receber Fatura</field>
            <field name="model">contract.receber_fatura</field>
            <field name="arch" type="xml">
                <form string="Receber Fatura">
                    <header position="inside">
                        <button type="object" string="VALIDAR" name="btn_validar_concluido" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="scheduled_date" readonly="1" />
                            <field name="origin" readonly="1"/>
                        </group>
                    </group>
                     <notebook>
                        <page string="Operações" name="operations">
                            <field name="receber_fatura_line" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <!--TREE view-->
        <record id="receber_fatura_tree_view" model="ir.ui.view">
            <field name="name">Receber Fatura</field>
            <field name="model">contract.receber_fatura</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id" />
                    <field name="scheduled_date" />
                    <field name="origin" />
                </tree>
            </field>
        </record>
    </data>
</odoo>
