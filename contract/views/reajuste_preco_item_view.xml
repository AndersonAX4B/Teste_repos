<!-- <?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="reajuste_preco_item_form_view" model="ir.ui.view">
            <field name="name">reajuste_preco_item_form</field>
            <field name="model">contract.reajuste_preco_item</field>
            <field name="arch" type="xml">
                <form string="Items Reajuste de Preço">
                    <sheet>
                      <h1><field name="name"/></h1>
                      <group>
                          <group name="left_main_group">
                                <field name="aplicado_em" widget="radio"/>
                                <group name="pricelist_rule_related" groups="base.group_no_one">
                                    <!-- Infos from the pricelist for UI rendering (monetary fields, ...) -->
                                    <field name="reajuste_preco" invisible="1"/>
                                    <!-- <field name="pricelist_id" invisible="1"/> -->
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                          </group>

                          <group name="right_main_group">
                                 <field name="data_inicio" optional="show" attrs="{'required':[('data_inicio', '!=', True)]}" />
                                 <field name="data_final" optional="show" attrs="{'required':[('data_final', '!=', True)]}" />
                          </group>

                      </group>
                      <group name="grp_protuto" attrs="{'invisible':[('aplicado_em', '=', '1')]}" >
                          <field name="product_id" optional="show" attrs="{'required':[('aplicado_em', '!=', '1')]}" />
                      </group>

                      <group string="Cálculo de Preço" name="pricelist_rule_computation">
                          <group name="pricelist_rule_method">
                              <field name="compute_price" string="Calcular Preço" widget="radio"/>
                          </group>
                          <group name="pricelist_rule_base">
                              <group name="grp_fixed_price" attrs="{'invisible':[('compute_price', '!=', 'fixed')]}">
                                  <field name="fixed_price" />
                              </group>

                              <group name='grp_percent_preco' attrs="{'invisible':[('compute_price', '!=', 'percentage')]}">
                                 <label for="percent_price" />
                                 <div>
                                   <field name="percent_price"/>
                                 </div>
                              </group>

                              <group name='grp_indice' attrs="{'invisible':[('compute_price', '!=', 'indice')]}">
                                 <label for="indice" />
                                 <div>
                                   <field name="indice" domain="[('active', '=', '1' )]"/>
                                 </div>
                              </group>

                          </group>
                      </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Fim do formulario -->

        <record id="reajuste_preco_item_view" model="ir.ui.view">
            <field name="name">reajuste_preco_item_view</field>
            <field name="model">contract.reajuste_preco_item</field>
             <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree string="Itens reajuste de preço">
                    <!-- Scope = coming from a product/product template -->
                    <field name="aplicado_em" />
                    <field name="product_id" />
                    <field name="fixed_price" />
                    <field name="percent_price" />
                    <field name="data_inicio" optional="show"/>
                    <field name="data_final" optional="show"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_reajuste_item_preco_window">
			<field name="name">Item preco</field>
			<field name="res_model">contract.reajuste_preco_item</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_id" ref="reajuste_preco_item_view" />
		</record>

